<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <title>List Users</title>
</head>
<body>
    <div class="topnav">
        <a href="/">Home</a>
        <a href="/createUser">Create User</a>
        <a class="active" href="/listUser">List User</a>
    </div>
    <div class="container mt-5">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Email</th>
            <th scope="col">Name</th>
            <th scope="col">City</th>
            <th class="text-center" scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% AllUser.forEach( users => { %>
          <tr>
            <th scope="row"><%= users.id %></th>
            <td><%= users.email %></td>
            <td><%= users.name %></td>
            <td><%= users.city %></td>
            <td class="text-center">
              <div class="btn btn-success"><a class="text-decoration-none text-danger" href="/editUser/<%= users.id %>">Edit</a></div>
              <div class="btn btn-danger">
                <form action="/deleteUser/<%= users.id %>" method="POST">
                  <input type="hidden" name="_method" value="DELETE">
                  <button type="submit" class="text-decoration-none text-black" style="background: none; border: none; padding: 0; cursor: pointer;">Delete</button>
                </form>
              </div>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
</body>
</html>